<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="cn.it.shop.model.Category" table="category" schema="" catalog="tiger">
        <id name="id">
            <column name="id" sql-type="int" not-null="true"/>
        </id>
        <property name="type">
            <column name="type" sql-type="varchar" length="20"/>
        </property>
        <property name="hot">
            <column name="hot" sql-type="tinyint"/>
        </property>
    </class>
</hibernate-mapping>